{
  "name": "hall3-mess",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "concurrently -i \"npm:server -s\" \"npm:client -s\"",
    "client": "ng serve -o",
    "server": "cd server && npm start",
    "build": "concurrently \"ng build --configuration development\" \"cd server && npm run build -s\"",
    "prod": "concurrently \"ng build --configuration production\" \"cd server && npm run prod -s\"",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "commit": "commit-wizard"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.10",
    "@angular/cdk": "^6.4.7",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/material": "^6.4.7",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/pwa": "^0.11.4",
    "@angular/router": "^6.1.0",
    "@angular/service-worker": "^6.1.0",
    "@ngx-pwa/local-storage": "^6.2.2",
    "@ngx-pwa/offline": "^6.1.0",
    "@zxing/ngx-scanner": "^1.3.0",
    "core-js": "^2.5.4",
    "hammerjs": "^2.0.8",
    "kjua": "^0.1.2",
    "moment": "^2.22.2",
    "ngx-analytics": "^4.6.3-patch1",
    "ngx-device-detector": "^1.3.5",
    "ngx-infinite-scroll": "^6.0.1",
    "ngx-kjua": "^1.3.0",
    "rxjs": "^6.3.3",
    "rxjs-compat": "^6.3.3",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.7.5",
    "@angular/cli": "~6.1.5",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "concurrently": "^4.0.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "pre-git": "^3.17.1",
    "protractor": "~5.4.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2"
  },
  "config": {
    "pre-git": {
      "pre-commit": [
        "npm run lint"
      ],
      "pre-push": [
        "npm run build"
      ],
      "post-commit": [],
      "post-checkout": [],
      "post-merge": [
        "git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD | grep -q -E ^package.json && npm install || echo",
        "git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD | grep -q server/package.json && cd server && npm install || echo"
      ]
    }
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  }
}
